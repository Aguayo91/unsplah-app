<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imageDetailPhoto"
            android:scaleType="centerCrop"
            android:src="@drawable/banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:paddingStart="@dimen/margin_16"
            android:padding="@dimen/margin_8"
            android:layout_alignParentBottom="true"
            android:background="@color/tenue_black"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <TextView
                android:id="@+id/textDetailUsername"
                android:text="Jose Sinahy Lara"
                android:textColor="@color/white"
                android:textSize="@dimen/title_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textDetailDescription"
                android:text="Fotografia bien chiva"
                android:textColor="@color/white"
                android:textSize="@dimen/title_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textDetailCreated"
                android:text="Creada: 17 de Mayo del 2020"
                android:textColor="@color/white"
                android:textSize="@dimen/title_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>
</layout>
